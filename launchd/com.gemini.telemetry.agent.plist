<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.gemini.telemetry.agent</string>

    <!-- Run every 300 seconds -->
    <key>StartInterval</key>
    <integer>300</integer>

    <key>ProgramArguments</key>
    <array>
      <string>/Users/bretbarnard/Projects/gemini-mvp/scripts/run-telemetry-agent.sh</string>
    </array>

    <!-- Persistent log file -->
    <key>StandardOutPath</key>
    <string>/Users/bretbarnard/Projects/gemini-mvp/var/telemetry_agent.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/bretbarnard/Projects/gemini-mvp/var/telemetry_agent.err</string>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <false/>
  </dict>
</plist>
